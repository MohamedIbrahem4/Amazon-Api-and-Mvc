@model AdminSiteUseMVC.ViewModel.Products.DetailsProductViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Details";

}
<div>
    <h4>@localizer["Product"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameEN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameEN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameAR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameAR)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionEN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionEN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionAR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionAR)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountPercentage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountPercentage)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.NameEN)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>
        <dd class="col-sm-10">
           
            <select class="form-control">
                @{
                    if (Model.Categories != null)
                    {
                        foreach (var item in Model.Categories)
                        {
                            <option>@item.NameEN</option>
                        }
                        
                    }
                    
                }
            </select>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

