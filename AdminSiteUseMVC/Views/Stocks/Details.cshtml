@model AdminSiteUseMVC.ViewModel.Stocks.StockViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Details";

}
<div>
    <h4>@localizer["Stock"]: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">@localizer["Edit"]</a> |
    <a asp-action="Index" class="btn btn-outline-primary">@localizer["Back to List"]</a>
</div>

